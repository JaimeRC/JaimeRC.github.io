---
import CustomSection from "../CustomSection.astro";
import Profile from "./components/Profile.astro";
import Skills from "./components/Skills.astro";
import Frameworks from "./components/Frameworks.astro";

import { getLangFromUrl, getI18N } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);

const { about } = getI18N(lang)
---
<CustomSection customStyle="mt-5">
    <h2 class={'fw-bold text-center'}>{about.title}</h2>
    <hr class={'mt-1 mb-5'}/>

    <Profile/>
    <Skills/>
    <Frameworks/>

    <div class={'mt-4'}/>
</CustomSection>

<style>
    .progress {
        position: relative;
        height: 20px;
    }

    .progress > .progress-type {
        width: 30%;
        position: absolute;
        left: 0;
        font-weight: 800;
        padding: 3px 30px 2px 10px;
        color: rgb(255, 255, 255);
        background-color: rgba(30, 120, 50, 0.8);
    }

    .progress > .progress-completed {
        position: absolute;
        right: 0;
        font-weight: 800;
        padding: 3px 10px 2px;
    }
</style>