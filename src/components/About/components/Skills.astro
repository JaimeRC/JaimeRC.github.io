---
import { getLangFromUrl, getI18N } from "../../../i18n/utils";

const lang = getLangFromUrl(Astro.url);

const { skills } = getI18N(lang)

---
<div class={"row mt-5"}>
    <div class={'col-sm-12 col-md-12 col-lg-6 col-xl-6 pe-lg-5'}>
        <div class={'row'}>
            <div class={'col'}>
                {skills.slice(0, 5).map((skill) => {
                    return (
                            <div class="progress my-3">
                                <div class="progress-bar" role="progressbar"
                                     style={{ 'width': skill.percentage + '%' }}
                                     aria-valuenow={skill.percentage} aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                                <span class="progress-type">{skill.skill}</span>
                                <span class="progress-completed">{`${skill.percentage} %`}</span>
                            </div>)
                })}
            </div>
        </div>

    </div>
    <div class={'col-sm-12 col-md-12 col-lg-6 col-xl-6 pe-lg-5'}>
        <div class={'row'}>
            <div class={'col'}>
                {skills.slice(5, 10).map((skill) => {
                    return (
                            <div class="progress my-3">
                                <div class="progress-bar" role="progressbar"
                                     style={{ 'width': skill.percentage + '%' }}
                                     aria-valuenow={skill.percentage} aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                                <span class="progress-type">{skill.skill}</span>
                                <span class="progress-completed">{`${skill.percentage} %`}</span>
                            </div>)
                })}
            </div>
        </div>

    </div>
</div>

<style>
    .progress {
        position: relative;
        height: 20px;
    }

    .progress > .progress-type {
        width: 30%;
        position: absolute;
        left: 0;
        font-weight: 800;
        padding: 3px 30px 2px 10px;
        color: rgb(255, 255, 255);
        background-color: rgba(30, 120, 50, 0.8);
    }

    .progress > .progress-completed {
        position: absolute;
        right: 0;
        font-weight: 800;
        padding: 3px 10px 2px;
    }

    .progress > .progress-bar {
        background-color: rgba(30, 150, 50, 0.8);
    }
</style>
