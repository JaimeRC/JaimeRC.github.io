---
interface Props {
    customStyle: string;
}

const { customStyle } = Astro.props;
---
<div class={`row py-3 mx-auto ${customStyle}`}>
    <div class={'col-sm-1 col-md-1 col-lg-2 col-xl-2'}/>
    <div class={'col-sm-10 col-md-10 col-lg-8 col-xl-8 mt-4'}>
        <slot/>
    </div>
    <div class={'col-sm-1 col-md-1 col-lg-2 col-xl-2'}/>
</div>